{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row first-content">
        <div class="container content">
            <div class="row">
                <h1 class="first-title">Messages</h1>
            </div>

            <div class="row" style="border-bottom: 3px solid #465362; margin-bottom: 50px">

            </div>





            <div class="row">
                <div class="form-signin col-md-12"  style="text-align: center;">

                    <div class="container">
                        <div class="messaging">
                            <div class="inbox_msg">
                                <div class="inbox_people">
                                    <div class="headind_srch">
                                        <div class="recent_heading">
                                            <h4>RÃ©cent</h4>
                                        </div>
                                        <div class="srch_bar">
                                            <div class="stylish-input-group">
                                                <input type="text" class="search-bar"  placeholder="Recherche" >
                                                <span class="input-group-addon">
                <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                </span> </div>
                                        </div>
                                    </div>
                                    <div class="inbox_chat">
                                        <div class="chat_list active_chat">
                                            <div class="chat_people">
                                                <div class="chat_img"> <img src="https://cdn.onlinewebfonts.com/svg/img_258083.png" alt="sunil"> </div>
                                                <div class="chat_ib">
                                                    <h5>{{ conv.interlocuteur }} <span class="chat_date">{{ conv.messages|last.datemessage|date("M d") }}</span></h5>
                                                    <p>{{ conv.messages|last.contenu }}</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="mesgs">
                                    <div class="msg_history">
                                        {% for message in conv.messages %}
                                            {% if message.auteur.username == user.username %}
                                                <div class="outgoing_msg">
                                                    <div class="sent_msg">
                                                        <p>{{ message.contenu }}</p>
                                                        <span class="time_date"> {{ message.datemessage|date("H:i | d/m/Y") }}</span> </div>
                                                </div>
                                            {% else %}
                                                <div class="incoming_msg">
                                                    <div class="incoming_msg_img"> <img src="https://cdn.onlinewebfonts.com/svg/img_258083.png" alt="sunil"> </div>
                                                    <div class="received_msg">
                                                        <div class="received_withd_msg">
                                                            <p>{{ message.contenu }}</p>
                                                            <span class="time_date"> {{ message.datemessage|date("H:i | d/m/Y") }}</span></div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="type_msg">
                                        <div class="input_msg_write">
                                            <input type="text" class="write_msg" placeholder="Ecrire un message" />
                                            <button class="msg_send_btn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div></div>

                </div>
            </div>
        </div>
    </div>



{% endblock %}

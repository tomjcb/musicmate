{% extends 'base.html.twig' %}

{% block title %}MusicMate - Signaler{% endblock %}

{% block body %}


<div class="row heighter">
    <div class="container">
        <div class="row">
            <div class="form-signin col-md-6 offset-3" style="text-align: center; margin-top: 30px">
                <img class="mb-4" src="/images/logo.png" alt="" width="125" height="125">
                <h1 class="h3 mb-3 font-weight-normal">Pourquoi voulez-vous signaler cette publication ?</h1>

                <!-- Material form login -->
                <div class="card">

                    <!--Card content-->
                    <div class="card-body px-lg-5 pt-0" style="margin-top: 15px">
                        {{ form_start(form) }}

                        <div class="md-form mt-0">
                            {% if not form.message.vars.valid %}
                                {{ form_widget(form.message,{'attr':{'class':'md-textarea form-control is-invalid', 'id' : 'mailInput' }}) }}
                            {% else %}
                                {{ form_widget(form.message,{'attr':{'class':'md-textarea form-control', 'id' : 'mailInput' }}) }}
                            {% endif %}
                            <label for="{{ form.message.vars.id }}">Message</label>
                            {% if not form.message.vars.valid %}
                                <small id="erreurContenu" class="form-text text-muted mb-4 red-text">
                                    {{ form_errors(form.message) }}
                                </small>
                            {% endif %}
                        </div>

                        <!-- Envoyer -->
                        <button class="btn blue-gradient btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit" value="{{ form_row(form.submit,{'label':'Signaler'}) }}

                            <!-- Register -->


                        </div>

                    </div>
                    <!-- Material form login -->

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

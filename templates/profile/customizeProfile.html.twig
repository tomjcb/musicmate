            </div>





        </div>
    </div>
</div>
</body>

    <script>
        function firstdisplayprofile(){
            document.getElementById('custom_profile').classList.toggle('d-none');
            document.getElementById('choice').classList.toggle('d-none');
            document.getElementById('choices').classList.toggle('d-none');
            document.getElementById('btnprofil').onclick = null;
        }
        function firstdisplaywallpaper(){
            document.getElementById('custom_wallpaper').classList.toggle('d-none');
            document.getElementById('choice').classList.toggle('d-none');
            document.getElementById('choices').classList.toggle('d-none');
            document.getElementById('btnwallpaper').onclick = null;
        }

        function displayprofil() {
            document.getElementById('custom_profile').classList.toggle('d-none');
            document.getElementById('custom_wallpaper').classList.toggle('d-none');
            document.getElementById('btnwallpaper').onclick = displaywallpaper;
            document.getElementById('btnprofil').onclick = null;
        }
        function displaywallpaper() {
            document.getElementById('custom_profile').classList.toggle('d-none');
            document.getElementById('custom_wallpaper').classList.toggle('d-none');
            document.getElementById('btnwallpaper').onclick = null;
            document.getElementById('btnprofil').onclick = displayprofil;
        }
    </script>



{% endblock %}

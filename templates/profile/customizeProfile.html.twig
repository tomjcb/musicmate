{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <style>
        html{
            margin: 0;
            height: 100%;

        }
        body{
            height: 100%;

        }
    </style>
<body  style="background:  url({{ asset("images/gear-wallpaper.png") }});background-size: 100%; ">
<div class="mask rgba-blue-grey-light" style="backdrop-filter: blur(0.9); height: 100%;">
    <div class="row ">
        <div class="container content">
            <div class="row">
                <h1 class="first-title"><B>Customisation de votre profil</B></h1>
            </div>


            <div class="row" style="border-bottom: 3px solid #465362; margin-bottom: 50px">

            </div>

            <div id="choices" class="row text-center align-content-center align-self-center justify-content-center d-none">

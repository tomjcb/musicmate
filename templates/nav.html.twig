                                    <i class="fa fa-search text-white" aria-hidden="true"></i>
                                </a>
                                </div>
                            </div>
                        {% endif %}
                        <script>
                            function clickSearch(){
                                var ele = document.getElementById("searchBar");
                                var url = '';
                                url = url.replace("star", ele.value);
                                window.location.href = url;
                            }
                        </script>
                    </div>
                </div>

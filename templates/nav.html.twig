                    <form class="form-inline my-2 my-lg-0 col-2" action="{{ path('app_logout') }}" method="post" style="text-align: right">
                         <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">
                            <i class="fa fa-sign-in"></i>
                            Se Déconnecter
                        </button>
                    </form>
                        {% endif %}
                {% endif %}
            </ul>
        </div>
    {% endif %}
</nav>
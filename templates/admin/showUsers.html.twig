{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row first-content">
        <div class="container content">
            <div class="row">
                <h1 class="first-title">Liste des utilisateurs</h1>
            </div>


            <div class="row" style="border-bottom: 3px solid #465362; margin-bottom: 50px">

            </div>


            <table class="table table-striped table-responsive-md btn-table">

                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>DateInscription</th>
                    <th>Compte activé</th>
                </tr>
                </thead>

                <tbody>
                {% for utilisateur in utilisateurs %}
                    {% if utilisateur.username != "admin" %}
                    <tr>
                        <td scope="row">{{ utilisateur.id }}</td>
                        <td>{{ utilisateur.username }}</td>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td> {{ utilisateur.dateinscription|date("d/m/Y") }}</td>
                        <td>
                            {% if utilisateur.comfirmed == 1 %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>

                    </tr>
                    {% endif %}
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>



{% endblock %}
